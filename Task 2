package com.company;
import java.util.Scanner;
public class Main {

    public static void main(String[] args) {
                String name = "Вячеслав";
                Scanner scan = new Scanner(System.in);

                System.out.println("Введите Имя: ");
                if(scan.hasNext(name)){
                    for(int i = 0; i < 1; i++){
                        System.out.println("Привет, "+name);
                    }
                }
            }

        }
